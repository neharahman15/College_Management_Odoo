<?xml version="1.0" encoding="UTF-8"?>
<odoo>
   <record id="email_template_student_admission" model="mail.template">
       <field name="name">Student Admission:Confirmation</field>
       <field name="model_id" ref="college_management.model_college_student_admission"/>
        <field name="subject">Admission Confirmation</field>
       <field name="email_from">noreply@example.com</field> 
       <field name="email_to">{{object.name.email}}</field>
        <field name="description">Sent automatically to student at confirmation</field>

       <field name="body_html" type="html">
               <p>Hi <t t-out="object.name.name"/>,</p>
               <p>This is a admission confirmation email</p>
               <p><strong>Congartulation!</strong></p>
               <br/>
               <p>Best regards,<br/>School Team</p>
       </field>
   </record>
</odoo>

