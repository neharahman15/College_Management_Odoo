<odoo>
    <!-- LIST VIEW -->
    <record id="view_college_teachers_list" model="ir.ui.view">
        <field name="name">college.teachers.list</field>
        <field name="model">college.teachers</field>
        <field name="arch" type="xml">
            <list>
                <field name="reference_num" />
                <field name="name"/>
                <field name="email"/>
                <field name="mobile"/>
                <field name="department"/>
            </list>
        </field>
    </record>
    <!-- FORM VIEW -->
    <record id="view_college_teachers_form" model="ir.ui.view">
        <field name="name">college.teachers.list</field>
        <field name="model">college.teachers</field>
        <field name="arch" type="xml">
            <form>
                <sheet style="max-width: 95%;">
                    <h1>
                        <field name="reference_num" />
                    </h1>
                    <group string="INFO">
                        <field name="name"/>
                        <div class="d-flex align-items-baseline w-md-50" colspan="2">
                                    <i class="fa fa-fw me-1 fa-envelope text-primary" title="Email"/>
                                    <field name="email" class="w-100" widget="email" placeholder="Email"/>
                        </div>
                        <div class="d-flex align-items-baseline w-md-50" colspan="2">
                                    <i class="fa fa-fw me-1 fa-phone text-primary" title="Phone"/>
                                    <field name="mobile" class="w-100" widget="phone" placeholder="Phone"/>
                        </div>
                        <field name="department"/>

                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    <!-- kanban -->
    <record id="view_teacher_kanban" model="ir.ui.view">
        <field name="name">college.teachers.kanban</field>
        <field name="model">college.teachers</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="card">
                        <div class="o_kanban_card oe_kanban_global_click">
                            <strong>
                                <field name="name"/>
                            </strong>
                            <div>
                                <field name="department"/>
                            </div>
                            <div>
                                <field name="mobile"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    
    <!-- ACTION -->
    <record id="action_college_teachers" model="ir.actions.act_window">
        <field name="name">Teachers</field>
        <field name="res_model">college.teachers</field>
        <field name="view_mode">list,form,kanban</field>
        
    </record>
    <menuitem id="menu_college_teachers"
              name="Teachers"
              parent="menu_college_root"
              action="action_college_teachers"/>
</odoo>
