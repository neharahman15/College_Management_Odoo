<odoo>
    <record id="product_template_view_form" model="ir.ui.view">
        <field name="name">product.template.inherit.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']" position="after">
                <page name="semester_plan"
                            string="Semester Plan"
                            invisible="is_course == False">
                    <group>
                        <field name="total_semester"/>
                        <field name="start_date"/>
                        <button name="generate_semester_plan"
                            string="Generate"
                            type="object"/>
                        <button name="clear_semester_plan"
                            string="Clear"
                            type="object"/>
                    </group>
                    <field name="semester_ids" invisible="show_semester_id != True" >
                        <list create='false' delete='false'>
                            <field name="semester_number"/>
                            <field name="semester_start_date"/>
                            <field name="semester_end_date" />
                            <field name="duration"/>
                            <field name="semester_fee"/>
                        </list>
                    </field>
                </page>
            </xpath>
            <xpath expr="//span[@name='sale_option']" position="before">
                <span class="d-inline-flex" style="margin-right: 12px;">
                    <field name="is_course"/>
                    <label for="is_course"/>
                </span>
            </xpath>
            <xpath expr="//field[@name='type']" position="attributes">
                <attribute name="readonly">is_course</attribute>
                <attribute name="force_save">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>