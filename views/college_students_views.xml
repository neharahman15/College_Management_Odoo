<odoo>
    <!-- LIST VIEW -->
    <record id="view_college_students_list" model="ir.ui.view">
        <field name="name">college.students.list</field>
        <field name="model">college.students</field>
        <field name="arch" type="xml">
            <list>
                <field name="reference_number"/>
                <field name="partner_id"/>
                <field name="mail"/>
                <field name="mobile"/>
            </list>
        </field>
    </record>
    <!-- FORM VIEW -->
    <record id="view_college_students_form" model="ir.ui.view">
        <field name="name">college.students.list</field>
        <field name="model">college.students</field>
        <field name="arch" type="xml">
            <form>
                <sheet style="max-width:80%;">
                    <h1>
                        <field name="reference_number" nolabel="1"/>
                    </h1>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <span class="o_form_label o_td_label o_address_type" name="address_name">
                                <span>Address</span>
                            </span>
                            <div class='o_address_format'>
                                <field name="street" placeholder="street..." class="o_address_street"/>
                                <field name="city" placeholder="city..." class="o_address_city"/>
                                <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                <field name="state" placeholder="State" class="o_address_state"/>
                                <field name="country" placeholder="Country" class="o_address_country"/>
                            </div>
                        </group>
                        <group>
                            <div class="d-flex align-items-baseline w-md-50" colspan="2">
                                <i class="fa fa-fw me-1 fa-envelope text-primary" title="Email"/>
                                <field name="mail" class="w-100" widget="email" placeholder="Email"/>
                            </div>
                            <div class="d-flex align-items-baseline w-md-50" colspan="2">
                                <i class="fa fa-fw me-1 fa-phone text-primary" title="Phone"/>
                                <field name="mobile" class="w-100" widget="phone" placeholder="Phone"/>
                            </div>
                            <field name="dob"/>
                            <field name="age"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>
    <!-- Kanban -->
    <record id="view_student_kanban" model="ir.ui.view">
        <field name="name">college.students.kanban</field>
        <field name="model">college.students</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="card">
                        <div class="o_kanban_card oe_kanban_global_click">
                            <strong>
                                <field name="name"/>
                            </strong>
                            <div>
                                <field name="email"/>
                            </div>
                            <div>
                                <field name="mobile" widget="phone"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <!-- ACTION -->
    <record id="action_college_students" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">college.students</field>
        <field name="view_mode">list,form,kanban</field>
    </record>
    <menuitem id="menu_college_root"
              name="College"/>
    <menuitem id="menu_college_students"
              name="Students"
              parent="menu_college_root"
              action="action_college_students"/>
</odoo>